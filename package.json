{
    "name": "jaysee.id.au-builder",
    "version": "1.0.0",
    "description": "Personal website builder",
    "author": "Joe Clark <jaysee@jaysee.id.au>",
    "license": "MIT",
    "private": true,
    "scripts": {
        "dev:start": "cd build/ && npx http-server -p 8080 -d false -c-1",
        "dev:build": "tsc -p tsconfig.dev.json && node ./src/index.js",
        "build": "tsc -p tsconfig.prod.json && node ./src/index.js",
        "test": "jest"
    },
    "devDependencies": {
        "@tsconfig/recommended": "^1.0.1",
        "@types/clean-css": "^4.2.5",
        "@types/fs-extra": "^9.0.13",
        "@types/jest": "^27.0.2",
        "@types/marked": "^4.0.3",
        "@types/minimatch": "^3.0.5",
        "@types/nodegit": "^0.27.3",
        "chalk": "^4.1.2",
        "clean-css": "^5.2.1",
        "front-matter": "^4.0.2",
        "fs-extra": "^9.0.1",
        "handlebars": "^4.7.6",
        "http-server": "^13.0.1",
        "jest": "^27.3.1",
        "marked": "^4.0.16",
        "minimatch": "^9.0.2",
        "moment": "^2.29.2",
        "nodegit": "^0.27.0",
        "nodemon": "^2.0.13",
        "normalize-url": "^4.5.1",
        "tar": "^4.4.18",
        "typescript": "^4.4.4"
    },
    "jest": {
        "testMatch": [
            "**/*.test.js"
        ]
    },
    "nodemonConfig": {
        "ext": "js,css,md,hbs",
        "ignore": [
            ".git",
            "node_modules",
            "build"
        ]
    }
}
